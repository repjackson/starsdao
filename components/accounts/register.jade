template(name='register')
    .ui.padded.stackable.grid
        .centered.row
            .ten.wide.column
                .ui.center.aligned.basic.segment
                    i.massive.icons
                        i.yin.yang.grey.icon
                        i.corner.plus.icon
                if message
                    h4.ui.center.aligned.header #{message}
                .ui.fluid.labeled.input(class=login_class)
                    .ui.small.inline.inverted.header 
                        i.user.grey.icon
                        |username
                    input.username(type='text')
                .ui.fluid.labeled.input(class=login_class)
                    .ui.small.inline.inverted.header 
                        i.lock.grey.icon
                        | password
                    input.password(type='password')
                .ui.fluid.labeled.input(class=login_class)
                    .ui.small.inline.inverted.header 
                        i.lock.grey.icon
                        | password again
                    input.password2(type='password')
                if username
                    if registering
                        .ui.fluid.large.circular.inverted.button.enter(class=enter_class)
                            i.user.plus.icon
                            |register '#{username}'
                    else
                        .ui.small.inverted.header username "#{username}" found
                        a.ui.black.circular.button(href='/login') login
                        
                        
                .ui.center.aligned.basic.segment    
                    //- .ui.small.header By clicking Register, you agree to our 
                    //-     a(href='https://henry-health.com/privacy-policy/' target="_window") Privacy Policy
                    .ui.small.header or
                        a.ui.circular.black.sign.in.button(href='/login') 
                            |login
                            i.right.chevron.icon
                    
